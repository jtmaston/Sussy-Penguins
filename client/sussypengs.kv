#:import C kivy.utils.get_color_from_hex
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Window kivy.core.window.Window
#:import Factory kivy.factory.Factory
#:import utils kivy.utils
#:import math math

<RightPenguin>:
    Image:
        source:'assets/%s/right.png'%self.parent.penguin_color
        pos: self.parent.pos
        size: self.size

<LeftPenguin>:
    Image:
        source:'assets/%s/left.png'%self.parent.penguin_color
        pos: self.parent.pos
        size: self.size

<ForwardPenguin>:
    Image:
        source:'assets/%s/forward.png'%self.parent.penguin_color
        pos: self.parent.pos
        size: self.size

<TasksPopup>:
    size_hint: (None, None)
    background_color: 0, 0, 0, 0
    size: "800", "920dp"

    Image:
        size_hint: None, None
        source: 'assets/clipboard.png'
        pos: self.parent.pos
        size: self.parent.size

ScreenManager:
	transition: SlideTransition(direction="up")
	Screen:
	    name: 'welcome_screen'
	    Image:
	        source: 'assets/menu.png'
	    FloatLayout:
	        Label:
	            id: menu_text
	            font_size: '50dp'
	            font_name: 'assets/Segoe UI'
	            text_size: 1000, None
                size: self.texture_size
	            color: utils.get_color_from_hex("000000")
	            pos: self.parent.center_x - ( self.width / 2 ), -self.height - 150
	        MDTextButton:
	            on_press: app.root.current = 'menu_screen'
	            padding: 20, 20
	            text:'Skip'
	            font_name: 'assets/Bumbasti'
	            size_hint: None, None
	            size: 100, 50
	        Image:
                source:'assets/gary_concerned.png'
                size_hint: None, None
                size: 240, 240
                pos: self.parent.width - self.width, 0

    Screen:
        name: 'character_select'
        Image:
	        source: 'assets/menu.png'
	    FloatLayout:
            Label:
                text: 'Pick a color'
                text_size: 1000, None
                valign: 'center'
                halign: 'center'
                font_size: '30dp'
                font_name: 'assets/Bumbasti'
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .9}
            GridLayout:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .6}
                rows: 3
                cols: 3
                Button:
                    background_color: (1, 1, 1, 0)
                    on_press:
                        app.penguin_color = 'blue'
                        app.root.current = 'name_select'
                    Image:
                        source:'assets/blue/forward.png'
                        pos: self.parent.pos
                        size: self.parent.size
                Button:
                    background_color: 1, 1, 1, 0
                    on_press:
                        app.penguin_color = 'green'
                        app.root.current = 'name_select'
                    Image:
                        source:'assets/green/forward.png'
                        pos: self.parent.pos
                        size: self.parent.size
                Button:
                    background_color: 1, 1, 1, 0
                    on_press:
                        app.penguin_color = 'yellow'
                        app.root.current = 'name_select'
                    Image:
                        source:'assets/yellow/forward.png'
                        pos: self.parent.pos
                        size: self.parent.size
                Button:
                    background_color: 1, 1, 1, 0
                    on_press:
                        app.penguin_color = 'red'
                        app.root.current = 'name_select'
                    Image:
                        source:'assets/red/forward.png'
                        pos: self.parent.pos
                        size: self.parent.size
                Button:
                    background_color: 1, 1, 1, 0
                    on_press:
                        app.penguin_color = 'pink'
                        app.root.current = 'name_select'
                    Image:
                        source:'assets/pink/forward.png'
                        pos: self.parent.pos
                        size: self.parent.size

    Screen:
        name: 'name_select'
        Image:
	        source: 'assets/menu.png'
        Label:
            text: 'And a name'
            text_size: 1000, None
            valign: 'center'
            halign: 'center'
            font_size: '30dp'
            font_name: 'assets/Bumbasti'
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y': .5}
        TextInput:
            size_hint: 0.2, None
            multiline: False
            height: '40dp'
            font_size: '20dp'
            pos_hint: {'center_x': .5, 'center_y': .4}
            on_text_validate:
                app.username = self.text
                app.find_game()
                app.root.current = 'loading_screen'

    Screen:
        name: 'loading_screen'
        Image:
	        source: 'assets/menu.png'
	    MDSpinner:
	        size_hint: None, None
	        size: 200, 200
	        pos_hint: {'center_x': .5, 'center_y': .5}
            color: [1, 1, 1, 1]
        Label:
            text: 'Hang tight\n Finding you a room'
            text_size: 1000, None
            valign: 'center'
            halign: 'center'
            font_size: '25dp'
            font_name: 'assets/Bumbasti'
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y': .3}

    Screen:
        name: 'stats'
        Image:
	        source: 'assets/menu.png'
        Image:
            id: profession_pic
            source: 'assets/Engineer.png'
            size_hint: None, None
            size: 200, 200
            pos_hint: {'center_x': .5, 'center_y': .5}

        Label:
            text: ("You are an %s" %app.profession) if app.profession[0] in "AEIOU" else ("You are a %s" %app.profession)
            text_size: 1000, None
            valign: 'center'
            halign: 'center'
            font_size: '25dp'
            font_name: 'assets/Bumbasti'
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y': .3}

        Label:
            id: stats_block
            text: ""
            text_size: 1000, None
            valign: 'center'
            halign: 'center'
            font_size: '20dp'
            font_name: 'assets/Segoe UI'
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y': .2}

    Screen:
	    name: 'menu_screen'
	    on_enter:
	        app.cutscene_callback.cancel()
	    Image:
	        source: 'assets/menu.png'
	    FloatLayout:
            Label:
                text: 'Penguin Force'
                text_size: 1000, None
                valign: 'center'
                halign: 'center'
                font_size: '50dp'
                font_name: 'assets/Bumbasti'
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .5}

            Label:
                text: 'Operation Burning heat'
                text_size: 1000, None
                valign: 'center'
                halign: 'center'
                font_size: '25dp'
                font_name: 'assets/Bumbasti'
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .4}

            BoxLayout:
                pos_hint: {'center_x': .5, 'center_y': .3}
                size_hint: 0.7, None
                Widget:
                    size_hint: 0.20, 1
                MDTextButton:
                    text: 'Play'
                    font_name: 'assets/Bumbasti'
                    font_size: '25dp'
                    on_press:
                        app.root.current = 'character_select'
                Widget:
                    size_hint: 0.1, 1
                MDTextButton:
                    text: 'Help'
                    font_name: 'assets/Bumbasti'
                    font_size: '25dp'
                    on_press:
                        app.root.current = 'tutorial'
                Widget:
                    size_hint: 0.20, 1

	        Image:
                source:'assets/gary_concerned.png'
                size_hint: None, None
                size: 240, 240
                pos: self.parent.width - self.width, 0

	Screen:
        name:'game_screen'
        on_pre_enter:
            app.root.transition = FadeTransition()
        on_enter:
			Window.size = (app.viewport_size[0], app.viewport_size[1])
			Window.top = 30
        Image:
            source:'assets/Command_room.png'
            #pos: app.pos
            size: app.viewport_size
        FloatLayout:
            id: 'game_room'
            size: root.width, root.height
            BoxLayout:
                pos_hint: {'center_x': .5, 'center_y': .39}
                size_hint: 1, None
                Widget:
                    size_hint: 0.25, 1
                LeftPenguin:
                    id: player_1
                    size_hint: None, None

                Widget:
                    size_hint: 0.5, None

                RightPenguin:
                    id: player_6
                    size_hint: None, None
                Widget:
                    size_hint: 0.25, 1
            ForwardPenguin:
                id: player_2
                pos: 510, 422
                size_hint: None, None
            ForwardPenguin:
                id: player_3
                pos: 640, 422
                size_hint: None, None
            #ForwardPenguin:
            #    id: player_4
            #    pos: 780, 422
            #    size_hint: None, None
            ForwardPenguin:
                id: player_5
                pos: 920, 422
                size_hint: None, None

            Button:
                background_color: (1, 1, 1, 0)
                on_press:
                    app.open_tasks()
                size_hint: None, None
                Image:
                    source: 'assets/clipboard.png'


            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: 723, 200
                #pos_hint: {'center_x': .5, 'center_y': None}
                pos: 395, 0
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(10, 10), (10, 10), (0, 0), (0, 0)]
                    Color:
                        rgba: utils.get_color_from_hex("855550")
                    Line:
                        width: 3
                        rectangle: self.x, self.y - 10, self.width, self.height + 10

                ScrollView:
                    size_hint: 1, 0.75
                    Label:
                        color: C('#101010')
                        text_size: (self.width, None)
                        halign: 'left'
                        valign: 'top'
                        padding: (10, 10)
                        size_hint: (1, None)
                        height: self.texture_size[1]
                        markup: True
                        id: chat_logs
                        text: "[color=#FF0000]Marcus: [/color] I honestly think it's Nancy \n[color=#FF0000]Nancy: [/color] Oh, yeah? Well I healed Andrew, what did you do? \n[color=#FF0000]Marcus: [/color] You're lying, I'm the detective and saw you sabotage the reactor \n[color=#FF0000]Nancy: [/color] Not true. Marcus sus \n\n"
                MDSeparator:
                    size_hint: 0.85, None
                    orientation: 'horizontal'
                    height: '1dp'
                    color: utils.get_color_from_hex("5f6c74")
                    pos_hint: {'center_x': .5, 'center_y': .5}
                TextInput:
                    padding: (10, 0)
                    size_hint: 1, None
                    id: chat_box
                    font_size: '20dp'
                    size_hint: (1, None)
                    background_color: 0,0,0,0
                    multiline: False
                    height: '40dp'
                    canvas.before:
                        Color:
                            rgb: C('#000000')